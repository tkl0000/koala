{
  "manifest_version": 3,
  "name": "Koala Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension built with React",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Koala Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "custom-page.html", "custom-page.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
